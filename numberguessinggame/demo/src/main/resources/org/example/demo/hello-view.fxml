<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demo.HelloController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Guess a number between 1 and 100:"/>
    <TextField fx:id="guessField" promptText="Enter your guess"/>
    <Button fx:id="submitButton" text="Submit Guess" onAction="#handleSubmitButtonAction"/>
    <Label fx:id="feedbackLabel" text=""/>
    <Label fx:id="attemptsLabel" text="Attempts: 0"/>
</VBox>
